---
interface Props {
	title: string;
	description: string;
	url: string;
	showInBlank?: boolean;
	image: string;
}

const { title, description, url, image, showInBlank = false } = Astro.props;
---
	<div class="h-96 max-w-72 hover:bg-black/20 hover:rounded-md p-2">
		<a href={url} target={showInBlank ? "_blank" : "_self"}>
			<div class="h-2/4 bg-blue rounded-md">
				<img src={image} alt={title} class="w-full h-full rounded-md object-cover" />
			</div>
			<div class="pt-2">
				<h2 class="text-2xl text-bold">{title}</h2>
				<p class="font-light text-sm text-textgray">{description}</p>
			</div>
		</a>
	</div>
