---
interface Props {
	jobTitle: string;
	time: string;
	companyName: string;
	description: string;
}

const { jobTitle, time, companyName, description } = Astro.props;
---

<hr>
<div class="flex flex-col p-3">
	<div class="flex justify-between text-2xl">
		<p>{jobTitle}</p>
		<p>{time}</p>
	</div>
	<div class="font-light pt-2">
		<p>{companyName}</p>
		<p>{description}</p>
	</div>
</div>
