---
interface Props {
	title: string;
}

const { title } = Astro.props;
// Supports weights 100-900
import '@fontsource-variable/outfit';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Portfolio" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/CarlosLecval/favicon.svg" />
		<title>{title}</title>
	</head>
	<body class="sans bg-offwhite">
		<slot />
	</body>
</html>
