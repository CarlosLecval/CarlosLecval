---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
import Card from '../components/Card.astro';
import TitleSection from '../components/TitleSection.astro';
import DescriptionSection from '../components/DescriptionSection.astro';
import ContactCard from '../components/ContactCard.astro';

const projects = await Astro.glob("./*.md");
---

<Layout title="Carlos Lecona">
	<div id="about" class="min-w-screen min-h-screen bg-gradient-to-b from-blue from-13% to-offwhite to-63% flex justify-center items-center flex-col">
		<div class="w-4/5 xl:w-2/4">
			<h1 class="text-4xl lg:text-6xl xl:text-9xl text-center">Hey, I'm Carlos</h1>
			<p class="text-xs md:text-base font-extralight text-center pt-3">Currently a Data Intelligence and Cybersecurity Engineering student searching for a SWE internship. Trying to build cool projects that enhance everyday experiences</p>
		</div>
		<!--<div class="flex flex-row justify-around pt-9">
			<img class="" src="../../public/cloud3.svg" alt="">
			<img class="" src="../../public/cloud.svg" alt="">
		</div>
		<div class="flex flex-col justify-center items-center">
			<img class="" src="../../public/cloud2.svg" alt="">
		</div>
		<div class="justify-self-center">
			<p>Hi, I'm Carlos</p>
		</div>
		div class="bg-mountain bg-no-repeat aspect-video bg-cover bg-center absolute bottom-0"></div>-->
	</div>
	<!--<div id="projects" class="min-w-screen min-h-screen bg-gradient-to-b from-green from-5% to-offwhite to-17% flex justify-center">-->
	<div id="projects" class="flex justify-center">
		<div class="w-4/5 xl:w-2/4 flex justify-between flex-wrap pt-9 gap-5">
			{
				projects.map((project) => <Card 
					title={project.frontmatter.title} 
					description={project.frontmatter.description} 
					url={project.url ?? "/"} 
					image={project.frontmatter.image.url ?? ""}
				/>)
			}
			<Card 
				title="GROOVING.app" 
				description="PLAY MUSIC WITH FRIENDS LIKE NEVER BEFORE" 
				url="https://grooving.app/" 
				showInBlank={true} 
				image="/CarlosLecval/groovingmockup.png"/>
		</div>
	</div>
	<div class="flex flex-col items-center pt-5 pb-32">
		<div id="experience" class="w-4/5 xl:w-2/4 flex flex-col">
			<TitleSection title="💼 Experience" />
			<DescriptionSection jobTitle="Software developer" time="June 2023 - June 2024" companyName="Flow Digital" >
			<ul class="list-disc">
				<li>Design and development of modules for clients using Odoo ERP. Using the Odoo python framework and OWL.</li>
				<li>Mantainance and updates to custom Odoo module for managing inventory under the make-to-availabity strategy.</li>
			</ul>
			</DescriptionSection>
			<DescriptionSection jobTitle="Research intern" time="Oct 2020 - Nov 2023" companyName="Project 969 of CÁTEDRAS CONACYT program" >
			<ul class="list-disc">
				<li>Development of a learning platform with a conversational agent (chatbot) in virtual reality with analytics with Unity</li>
				<li>Research with focus on Natural Language Processing</li>
				<li>2 publications in the Research in computing science scientific journal and 1 article in Komputer Sapiens magazine</li>
				<li>Development of a website for registering and applying experiments in the learning platform</li>
			</ul>
			</DescriptionSection>
			<DescriptionSection jobTitle="Software developer" time="Sept 2020 - Nov 2020" companyName="FORESTADENT MEXICO" >
			<ul class="list-disc">
				<li>Development of an invoice creation desktop app in java and MySQL</li>
			</ul>
			</DescriptionSection>
		</div>
		<div id="education" class="w-4/5 xl:w-2/4 flex flex-col pt-3">
			<TitleSection title="🎓 Education" />
			<DescriptionSection jobTitle="Data intelligence and Cybersecurity Engineering" time="August 2021 - June 2025" companyName="Universidad Panamericana" />
			<DescriptionSection jobTitle="Programming technician" time="August 2018 - June 2021" companyName="Instituto Politécnico Nacional" />
		</div>
	</div>
	<Footer />
	<ContactCard />
	<script>
    document.querySelector('#closeContact')!.addEventListener('click', () => {
			document.querySelector<HTMLElement>('#contact')!.style.display = 'none';
    });

    document.querySelector('#openContact')!.addEventListener('click', () => {
			document.querySelector<HTMLElement>('#contact')!.style.display = 'flex';
    });
  </script>
</Layout>

